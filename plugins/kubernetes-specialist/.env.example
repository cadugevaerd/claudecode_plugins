# Kubernetes MCP Server Configuration
# Copy this file to .env and customize if needed

# Optional: Custom kubeconfig path
# Defaults to ~/.kube/config
# Example: ~/.kube/config or /path/to/custom/kubeconfig
# KUBECONFIG=/home/user/.kube/config

# Optional: Kubernetes context to use
# Leave empty to use current context from kubeconfig
# KUBERNETES_CONTEXT=my-cluster-context

# Optional: Default namespace for operations
# Defaults to 'default'
# KUBERNETES_NAMESPACE=production

# Optional: Enable read-only mode (non-destructive operations only)
# Defaults to 'false'
# ALLOW_ONLY_NON_DESTRUCTIVE_TOOLS=false

# Optional: Log level for MCP server
# Defaults to 'info', options: debug, info, warn, error
# LOG_LEVEL=info
