# Terraform configuration for {project_name} agent
# Generated by Systemic Agent Orchestrator

terraform {
  required_version = ">= 1.5.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
    random = {
      source  = "hashicorp/random"
      version = "~> 3.5"
    }
  }
}

provider "aws" {
  region = var.aws_region

  default_tags {
    tags = local.common_tags
  }
}

# Local values
locals {
  common_tags = {
    PROJETO   = upper(var.project_name)
    AMBIENTE  = upper(var.environment)
    PRODUTO   = "AI-AGENTS"
    MANAGED   = "TERRAFORM"
  }

  log_retention = {
    dev     = 1
    homolog = 3
    prod    = 7
  }
}

# Random password for Aurora
resource "random_password" "db_master" {
  length           = 32
  special          = true
  override_special = "!#$%&*()-_=+[]{}<>:?"
}

# Aurora Serverless v2 Cluster
module "database" {
  source = "./modules/database"

  project_name    = var.project_name
  environment     = var.environment
  master_password = random_password.db_master.result
  min_capacity    = var.aurora_min_capacity
  max_capacity    = var.aurora_max_capacity
  common_tags     = local.common_tags
}

# SSM Parameters for secrets
module "secrets" {
  source = "./modules/secrets"

  project_name       = var.project_name
  environment        = var.environment
  aurora_cluster_arn = module.database.cluster_arn
  aurora_secret_arn  = module.database.secret_arn
  langsmith_api_key  = var.langsmith_api_key
  common_tags        = local.common_tags
}

# API Gateway
module "api" {
  source = "./modules/api"

  project_name     = var.project_name
  environment      = var.environment
  allowed_origins  = var.allowed_origins
  throttling_burst = var.throttling_burst
  throttling_rate  = var.throttling_rate
  log_retention    = local.log_retention[var.environment]
  common_tags      = local.common_tags
}

# Agent Runtime (ECS Fargate)
module "agent_runtime" {
  source = "./modules/agent-runtime"

  project_name       = var.project_name
  environment        = var.environment
  aws_region         = var.aws_region
  cpu                = var.ecs_cpu
  memory             = var.ecs_memory
  aurora_cluster_arn = module.database.cluster_arn
  aurora_secret_arn  = module.database.secret_arn
  langsmith_ssm_arn  = module.secrets.langsmith_parameter_arn
  api_gateway_id     = module.api.api_id
  log_retention      = local.log_retention[var.environment]
  common_tags        = local.common_tags
}

# CloudWatch Monitoring
module "monitoring" {
  source = "./modules/monitoring"

  project_name   = var.project_name
  environment    = var.environment
  log_retention  = local.log_retention[var.environment]
  ecs_cluster    = module.agent_runtime.cluster_name
  api_gateway_id = module.api.api_id
  common_tags    = local.common_tags
}
